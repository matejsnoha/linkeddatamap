@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .
@prefix void: <http://rdfs.org/ns/void#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix sd: <http://www.w3.org/ns/sparql-service-description#> .
@prefix s: <http://schema.org/> .
@prefix ldm: <https://purl.org/ldm/> .
@prefix ldmres: <https://purl.org/ldm/resource/> .
@prefix ruian: <http://ruian.linked.opendata.cz/ontology/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

ldmres:layer_ruian_prague

    a ldm:Layer ;
    a void:Dataset ;

    dcterms:title "RUIAN (Prague - old)" ;
	dcterms:description "RUIAN - registry of land identification, addresses and properties of the Czech Republic" ;
	dcterms:publisher [ a s:Person ;
						s:name "Matej Snoha" ;
						s:email "matej@snoha.info" ] ;
	dcterms:modified "2018-04-29"^^xsd:date ;
	dcterms:license <http://www.opendatacommons.org/licenses/by/> ;

    ldm:service [  a sd:Service ;
                      sd:endpoint "https://ldm.matej.snoha.info/fuseki/ruian-old/query" ;
                      sd:supportedLanguage sd:SPARQL11Query ;
                      ldm:jenaSpatial true ;
                   ];

	ldm:mapLayer ldmres:mapLayer_ruian_prague ;
	ldm:dataLayer ldmres:dataLayer_ruian_prague ;

    s:color "#8888FF" .

ldmres:mapLayer_ruian_prague

    a ldm:MapLayer ;
    a void:Dataset ;

    dcterms:title "RUIAN (Prague - old)" ;
	dcterms:description "RUIAN - registry of land identification, addresses and properties of the Czech Republic" ;
	dcterms:publisher [ a s:Person ;
						s:name "Matej Snoha" ;
						s:email "matej@snoha.info" ] ;
	dcterms:modified "2017-10-18"^^xsd:date ;
	dcterms:license <http://www.opendatacommons.org/licenses/by/> ;

	ldm:service [  a sd:Service ;
				  sd:endpoint "https://ldm.matej.snoha.info/fuseki/ruian-old/query" ;
				  sd:supportedLanguage sd:SPARQL11Query ;
				  ldm:jenaSpatial true ;
			   ];

	ldm:mapLayerStructure [  a ldm:MapLayerStructure ;
						  ldm:addressPointType ruian:AdresniMisto ;
						  ldm:addressPath ( s:name ) ; #TODO similar as data description
						  ldm:latitudePath ( ruian:adresniBod s:geo s:latitude ) ;
						  ldm:longitudePath ( ruian:adresniBod s:geo s:longitude) ] .

ldmres:dataLayer_ruian_prague

    a ldm:DataLayer ;
    a s:Dataset ;

    dcterms:title "RUIAN (Prague - old)" ;
	dcterms:description "RUIAN - registry of land identification, addresses and properties of the Czech Republic" ;
	dcterms:publisher [ a s:Person ;
						s:name "Matej Snoha" ;
						s:email "matej@snoha.info" ] ;
	dcterms:modified "2017-10-18"^^xsd:date ;
	dcterms:license <http://www.opendatacommons.org/licenses/by/> ;

	ldm:dataLayerStructure [ a ldm:DataLayerStructure ;
						  ldm:dataPointType ruian:StavebniObjekt ;
						  ldm:dataName s:name ;
						  ldm:dataDescription ( "Pocet bytu " ruian:pocetBytu ", Pocet podlazi " ruian:pocetPodlazi ) ;
						  ldm:mapPointPath [ sh:inversePath ruian:stavebniObjekt ] ] ;

	ldm:mapLayer ldmres:mapLayer_ruian_prague .