<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:minHeight="72dp"
                android:background="?android:attr/selectableItemBackground">

    <LinearLayout
            android:id="@+id/settings_item_icon_layout"
            android:orientation="vertical"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:gravity="center" />

    <LinearLayout
            android:id="@+id/settings_item_texts_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/settings_item_icon_layout"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/settings_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/settingsItem"
                android:gravity="left"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/settings_item_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@color/settingsItem"
                android:gravity="left"/>

    </LinearLayout>

</RelativeLayout>