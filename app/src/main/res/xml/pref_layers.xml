<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="pref_layer_1"
        android:title="Layer 1">

        <CheckBoxPreference
            android:key="pref_layer_1_enabled"
            android:defaultValue="true"
            android:title="Enabled" />

        <EditTextPreference
            android:key="pref_layer_1_name"
            android:defaultValue="RUIAN"
            android:inputType="textCapWords"
            android:title="Name" />

        <EditTextPreference
            android:key="pref_layer_1_endpoint"
            android:defaultValue="http://matej.snoha.info/dpm/sparql"
            android:inputType="textUri"
            android:title="Endpoint" />

        <EditTextPreference
            android:key="pref_layer_1_query"
            android:defaultValue="@string/ruian_live_query"
            android:inputType="textMultiLine"
            android:title="Query" />

        <Preference
            android:key="pref_layer_1_test"
            android:title="Test" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_layer_2"
