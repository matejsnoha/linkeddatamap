            android:title="Endpoint" />

        <EditTextPreference
            android:key="pref_layer_2_query"
            android:defaultValue="@string/doubleshot_live_query"
            android:inputType="textMultiLine"
            android:title="Query" />

        <Preference
            android:key="pref_layer_2_test"
            android:title="Test" />

    </PreferenceCategory>

