            android:title="Enabled" />

        <EditTextPreference
            android:key="pref_layer_4_name"
            android:defaultValue="Layer 4"
            android:inputType="textCapWords"
            android:title="Name" />

        <EditTextPreference
            android:key="pref_layer_4_endpoint"
            android:defaultValue="http://"
            android:inputType="textUri"
            android:title="Endpoint" />

        <EditTextPreference
            android:key="pref_layer_4_query"
            android:defaultValue=""
            android:inputType="textMultiLine"
